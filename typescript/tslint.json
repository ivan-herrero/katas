{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "semicolon": [true, "never"],
    "arrow-parens": false,
    "max-line-length": [true, {
      "limit": 120,
      "ignore-pattern": "//"
    }],
    "member-access": false,
    "interface-name": false,
    "curly": false,
    "trailing-comma": false
  },
  "rulesDirectory": []
}
